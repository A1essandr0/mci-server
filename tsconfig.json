{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "noImplicitAny": true,

    "sourceMap": true,
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,

    "skipLibCheck": true,
    "baseUrl": "./",
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"]
}
